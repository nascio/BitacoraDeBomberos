<UserControl x:Class="BitacoraDeBomberos.Controles.TituloLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l_ctrls="clr-namespace:BitacoraDeBomberos.Controles"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Padding="2,5"
             d:DesignHeight="300"
             d:DesignWidth="1100"
             mc:Ignorable="d">
    <UserControl.Template>
        <ControlTemplate TargetType="l_ctrls:TituloLabel">
            <StackPanel Margin="{TemplateBinding Padding}" Orientation="Vertical">

                <TextBlock FontSize="10"
                           FontWeight="Bold"
                           Foreground="Black"
                           Text="{TemplateBinding Titulo}" />

                <TextBlock Margin="20,5,0,0"
                           FontWeight="{TemplateBinding FontWeight}"
                           Foreground="{TemplateBinding Foreground}"
                           Text="{TemplateBinding Contenido}" />

            </StackPanel>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
